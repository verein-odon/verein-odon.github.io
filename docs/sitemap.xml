---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" 
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
    {% for page in site.pages %}
        {% if page.sitemap != false and page.title %}
        <url>
            <loc>{{ page.url | absolute_url }}</loc>
            <lastmod>{{ page.date | default: site.time | date_to_xmlschema }}</lastmod>
            {% comment %}
                Multiingual Link Logic:
                Finds the counterpart of this page in other languages
            {% endcomment %}
            {% assign translations = site.pages | where: "ref", page.ref %}
            {% for trans in translations %}
                <xhtml:link rel="alternate" hreflang="{{ trans.lang }}" href="{{ trans.url | absolute_url }}" />
            {% endfor %}
        </url>
        {% endif %}
    {% endfor %}
</urlset>